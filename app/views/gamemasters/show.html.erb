<h1><%= @gamemaster.name %></h1>

<% if user_signed_in? %>
    <div class="btn-toolbar mt-3">
        <%= link_to('Edit', edit_gamemaster_path(@gamemaster), class: 'btn btn-warning me-2') if policy(@gamemaster).update? %>
        <%= button_to('Delete', @gamemaster, class: 'btn btn-danger', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@gamemaster.title}' ?" } }) if policy(@gamemaster).destroy? %>
    </div>
<% end %>
