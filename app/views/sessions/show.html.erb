<h1> <%= @session.title %> </h1>
<h3> created by <%= link_to @session.gamemaster.name %> </h3>

<% if user_signed_in? %>
    <div class="btn-toolbar mt-3">
        <%= link_to 'Edit', edit_session_path(@session), class: 'btn btn-warning me-2' %>
        <%= button_to 'Delete', @session, class: 'btn btn-danger', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@session.title}' ?" } } %>
    </div>
<% end %>
