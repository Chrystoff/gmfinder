<h1><%= @game.name %></h1>

<% if user_signed_in? %>
    <div class="btn-toolbar mt-3">
        <%= link_to('Edit', edit_game_path(@game), class: 'btn btn-warning me-2') if policy(@game).update? %>
        <%= button_to('Delete', @game, class: 'btn btn-danger', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@game.title}' ?" } }) if policy(@game).destroy? %>
    </div>
<% end %>
