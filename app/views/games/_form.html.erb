<%= form_with(model: @game) do |f| %>
  <fieldset class="mb-2">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset class="mb-2">
    <%= cl_image_tag @game.cover.key, :height=>100, :width=>150, crop: :limit, cloud_name: 'macreadiebri' %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :cover %>
    <%= f.file_field :cover %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.submit class: 'btn btn-outline-primary' %>
  </fieldset>
<% end %>
