<h1><%= @player.name %></h1>

<% if user_signed_in? %>
    <div class="btn-toolbar mt-3">
        <%= link_to('Edit', edit_player_path(@player), class: 'btn btn-warning me-2') if policy(@player).update? %>
        <%= button_to('Delete', @player, class: 'btn btn-danger', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@player.title}' ?" } }) if policy(@player).destroy? %>
    </div>
<% end %>