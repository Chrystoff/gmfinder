<%= form_with(model: @player) do |f| %>
  <fieldset class="mb-2">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset class="mb-2">
    <%= cl_image_tag @player.profilepic.key, :height=>100, :width=>150, crop: :limit, cloud_name: ENV['CLOUDINARY_CLOUD_NAME'] %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :profilepic %>
    <%= f.file_field :profilepic %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.submit class: 'btn btn-outline-primary' %>
  </fieldset>
<% end %>
