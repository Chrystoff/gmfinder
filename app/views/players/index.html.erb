<h1>
    Players
    <%= user_signed_in? && policy(Player).new? ? link_to('New Player', new_player_path, class: "btn btn-primary") : '' %>
</h1>

<% @players.each do |player| %>
    <p>
        <%= cl_image_tag(player.profilepic.key, :height=>100, :width=>150, crop: :limit, cloud_name: 'macreadiebri') if player.profilepic.attached? %>
        <%= link_to player.name, player %>
    </p>
<% end %>
